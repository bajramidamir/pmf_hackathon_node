<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administratorski Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-4">
    <h2>Administratorski Panel</h2>

    <!-- Pregled, filtriranje i pretraga prijava -->
    <div class="card">
        <div class="card-header">
            Pregled, filtriranje i pretraga prijava
        </div>
        <div class="card-body">
            <!-- Tabela sa prijavama -->
            <!-- Implementirajte funkcionalnost za pregled, filtriranje i pretragu prijava -->
            <table class="table">
                <thead>
                <tr>
                    <th>ID Prijave</th>
                    <th>Status</th>
                    <th>Kategorija</th>
                    <th>Podkategorija</th>
                    <th>Opis</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% reports.forEach(report => { %>
                    <tr>
                        <td><%= report.report_id %></td>
                        <td><%= report.status %></td>
                        <td><%= report.category %></td>
                        <td><%= report.subcategory %></td>
                        <td><%= report.description %></td>
                        <td>
                            <form action="/admin_dashboard/view_report">
                                <input type="hidden" name="reportId" value="<%= report.report_id %>">
                                <button class="btn btn-primary">Pregled</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
                <!-- Prikaz prijava -->
                <!-- Dodajte dinamičko generisanje redova tabele sa podacima o prijavama -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Označavanje prijava -->
    



    <!-- Statistike i Izvještaji -->
    <div class="card mt-4">
        <div class="card-header">
            Statistike i Izvještaji
        </div>
        <div class="card-body">
            <!-- Implementirajte grafikone i izveštaje za administratore -->
            <!-- Ovde možete koristiti različite JavaScript biblioteke za grafikone, npr. Chart.js -->
        </div>
    </div>

    <!-- Arhiviranje -->
    <div class="card mt-4">
        <div class="card-header">
            Arhiviranje
        </div>
        <div class="card-body">
            <!-- Implementirajte funkcionalnost za arhiviranje i praćenje historije riješenih ili zatvorenih prijava -->
            <button class="btn btn-warning">Arhiviraj Prijave</button>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
